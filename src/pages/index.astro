---
import MainLayout from "~/layouts/MainLayout.astro";
import { Separator } from "~/components/ui";
import About from "~/components/About.tsx";
import Projects from "~/components/Projects.tsx";
import Stacks from "~/components/Stacks.tsx";
import Socials from "~/components/Socials.tsx";
import DevelopedBy from "~/components/DevelopedBy.tsx";
---
<MainLayout>
  <div class="fixed top-0 right-7 z-10 w-1/5 bg-accent-1 p-4 rounded-b-3xl shadow-lg flex justify-center">
    {/* Bouton de redirection */}
    <a href="/" class="mx-2">
      <button class="px-4 py-2 rounded-full bg-accent-1 text-neutral-6 hover:text-primary-9">
        Accueil
      </button>
    </a>
    <a href="/veille" class="mx-2">
      <button class="px-4 py-2 rounded-full bg-accent-1 text-neutral-6 hover:text-primary-9">
        Veille Technologique
      </button>
    </a>
  </div>

  <main class="container p-3 mx-auto max-w-screen-lg min-h-dvh" style="color: #333; background-color: #f9f9f9; box-shadow: 0 0 10px rgba(0,0,0,0.1); border-radius: 10px;">
    <About client:idle />
    <Separator className="my-8" />
    <Socials client:idle />
    <div class="h-10"></div>
    <Projects client:idle />
    <div class="h-10"></div>
    <Stacks client:idle />
    <div class="h-10"></div>
    <Separator className="my-8" />
    <DevelopedBy />
  </main>
</MainLayout>

<style>
  /* boxes pattern */
  body {
    z-index: 1;
    position: relative;
    background-color: #f9f9f9; /* Fond légèrement grisé */
    color: #333; /* Texte noir */
  }
</style>
